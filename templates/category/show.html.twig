{% extends 'base.html.twig' %}

{% block title %}Série #{{ category.name }}
{% endblock %}

{% block body %}

	<div class="media">
		<h1>
			Catégorie
			{{ category.name }}</h1>
		{% for program in programs %}

			<h2>{{ loop.index }}
				/
				{{ program.title }}</h2>
			<p>{{ program.synopsis }}</p>
			<a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>


		{% endfor %}

		<a href="{{ path('category_index') }}">

			Retour à la liste des categories

		</a>
	</div>


{% endblock %}
