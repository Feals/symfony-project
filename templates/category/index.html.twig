{% extends 'base.html.twig' %}

{% block title %}All categories
{% endblock %}

{% block body %}
	<h1>Toutes les catégories de la table category :
	</h1>
	{% for category in categories %}

		<div>

			<h2>{{ loop.index }}
				/
				{{ category.name }}
				<a href="{{ path("category_show", { categoryName: category.name }) }}">Voir les séries de la catégorie

					{{category.name}}</a>
			{% else %}
				Aucune catégorie trouvée.
			{% endfor %}
		</br>
	</br>
	<a href="{{ path('app_index') }}">
		Retour à l'accueil
	</a>
{% endblock %}
